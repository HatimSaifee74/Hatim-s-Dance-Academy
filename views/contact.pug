extends  base.pug

block scripts 
  script(src='/app.js')

block style 
   style 
     include ../static/style.css
     include ../static/contact.css
    
block content 
   div#form
      h1 Contact Form
      form(action="/contact", method="post" ,Class="myform")
       input(type="text", name="name",placeholder="Enter Your Name..") 
       input(type="number", name="age",placeholder="Enter Your age..") 
       input(type="gender", name="gender",placeholder="Enter Your gender..") 
       input(type="phone", name="number",placeholder="Enter Your Mobile Number..") 
       input(type="email", name="email",placeholder="Enter Your Email..") 
       input(type="text", name="address",placeholder="Enter Your Address..") 
       input(type="date", name="dateOfJoining",placeholder="Enter date you would like to join..") 
       input(type="number", name="BATCH",placeholder="Enter batch you prefer..") 
      
       button(class="btn" ) 
         | Submit 